<% content_for :title, "Edit Job" %>

<div class="max-w-3xl mx-auto">
  <h1 class="text-3xl font-extrabold text-gray-900 mb-6">Edit Job</h1>

  <div class="bg-white shadow-lg rounded-lg p-8">
    <%= render "form", job: @job %>
  </div>

  <div class="mt-8 space-x-4 text-center">
    <%= link_to "Show this Job", @job,
                class: "inline-block bg-blue-600 text-white font-medium py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-200" %>
    <%= link_to "Back to Jobs", jobs_path,
                class: "inline-block bg-gray-600 text-white font-medium py-2 px-6 rounded-lg hover:bg-gray-700 transition duration-200" %>
  </div>
</div>
