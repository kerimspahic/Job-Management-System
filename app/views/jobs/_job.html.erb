<tr class="hover:bg-gray-100 transition duration-200">
  <td class="border border-gray-300 px-4 py-3 font-medium text-gray-800"><%= job.company_name %></td>
  <td class="border border-gray-300 px-4 py-3 text-gray-700"><%= job.job_title %></td>
  <td class="border border-gray-300 px-4 py-3 text-gray-600"><%= truncate(job.job_description, length: 50) %></td>
  <td class="border border-gray-300 px-4 py-3 text-gray-700"><%= job.location %></td>
  <td class="border border-gray-300 px-4 py-3 text-gray-700 capitalize"><%= job.job_type.humanize %></td>
  <td class="border border-gray-300 px-4 py-3 text-green-600 font-semibold"><%= number_to_currency(job.salary) %></td>
  <td class="border border-gray-300 px-4 py-3 text-gray-700"><%= job.application_deadline.strftime("%d %b %Y") %></td>
  <td class="border border-gray-300 px-4 py-3 text-center">
    <div class="flex items-center justify-center space-x-2">
      <%= link_to "View", job_path(job), class: "text-blue-500 font-semibold hover:underline" %>
      <span class="text-gray-400">|</span>
      <%= link_to "Edit", edit_job_path(job), class: "text-yellow-500 font-semibold hover:underline" %>
      <span class="text-gray-400">|</span>
      <%= link_to "Delete", job_path(job), method: :delete, data: { confirm: "Are you sure?" },
                  class: "text-red-500 font-semibold hover:underline" %>
    </div>
  </td>
</tr>
