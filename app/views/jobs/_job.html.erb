<tr>
  <td class="border border-gray-300 px-4 py-2"><%= job.company_name %></td>
  <td class="border border-gray-300 px-4 py-2"><%= job.job_title %></td>
  <td class="border border-gray-300 px-4 py-2"><%= truncate(job.job_description, length: 50) %></td>
  <td class="border border-gray-300 px-4 py-2"><%= job.location %></td>
  <td class="border border-gray-300 px-4 py-2"><%= job.job_type.humanize %></td>
  <td class="border border-gray-300 px-4 py-2"><%= number_to_currency(job.salary) %></td>
  <td class="border border-gray-300 px-4 py-2"><%= job.application_deadline.strftime("%d %b %Y") %></td>
  <td class="border border-gray-300 px-4 py-2">
    <%= link_to "View", job_path(job), class: "text-blue-500" %> |
    <%= link_to "Edit", edit_job_path(job), class: "text-yellow-500" %> |
    <%= link_to "Delete", job_path(job), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500" %>
  </td>
</tr>