<div class="bg-white border border-gray-200 rounded-lg p-8 shadow-md max-w-2xl mx-auto">
  <h1 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">Job Details</h1>

  <dl class="space-y-4">
    <div class="flex items-center">
      <dt class="font-semibold text-gray-700 w-1/3">Company Name:</dt>
      <dd class="text-gray-900 font-medium w-2/3"><%= @job.company_name %></dd>
    </div>
    <div class="flex items-center">
      <dt class="font-semibold text-gray-700 w-1/3">Job Title:</dt>
      <dd class="text-gray-900 font-medium w-2/3"><%= @job.job_title %></dd>
    </div>
    <div class="flex items-start">
      <dt class="font-semibold text-gray-700 w-1/3">Description:</dt>
      <dd class="text-gray-900 font-medium w-2/3"><%= @job.job_description %></dd>
    </div>
    <div class="flex items-center">
      <dt class="font-semibold text-gray-700 w-1/3">Location:</dt>
      <dd class="text-gray-900 font-medium w-2/3"><%= @job.location %></dd>
    </div>
    <div class="flex items-center">
      <dt class="font-semibold text-gray-700 w-1/3">Job Type:</dt>
      <dd class="text-gray-900 font-medium w-2/3 capitalize"><%= @job.job_type %></dd>
    </div>
    <div class="flex items-center">
      <dt class="font-semibold text-gray-700 w-1/3">Salary:</dt>
      <dd class="text-green-600 font-semibold w-2/3"><%= number_to_currency(@job.salary) %></dd>
    </div>
    <div class="flex items-center">
      <dt class="font-semibold text-gray-700 w-1/3">Application Deadline:</dt>
      <dd class="text-gray-900 font-medium w-2/3"><%= @job.application_deadline %></dd>
    </div>
  </dl>
</div>

<div class="flex justify-between mt-8">
  <%= link_to "Edit Job", edit_job_path(@job),
              class: "inline-block bg-yellow-500 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:bg-yellow-600" %>
  <%= link_to "Back to Jobs", jobs_path,
              class: "inline-block bg-gray-500 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:bg-gray-600" %>
  <%= button_to "Delete Job", @job, method: :delete,
                class: "inline-block bg-red-500 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:bg-red-600",
                data: { confirm: "Are you sure you want to delete this job?" } %>
</div>
