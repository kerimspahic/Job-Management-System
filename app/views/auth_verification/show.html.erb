<div class="max-w-md mx-auto p-6 bg-white shadow rounded-lg space-y-6">
  <h2 class="text-2xl font-bold text-gray-900">Check Your Email</h2>
  <p class="text-gray-700">
    Please enter the verification code sent to your email address 
    <span class="font-medium text-gray-900"><%= session[:email] %></span>.
  </p>
  
  <div>
    <%= form_with(url: auth_verification_path, class: "space-y-4") do |f| %>
      <%= f.hidden_field :email, value: @email %>
      
      <div>
        <%= f.text_field :verification_code, 
            placeholder: "Verification Code", maxlength: 6, 
            class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      
      <div>
        <%= f.button class: "w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" do %>
          Verify
        <% end %>
      </div>
    <% end %>
  </div>
</div>
