<div class="max-w-md mx-auto p-6 bg-white shadow-md rounded-lg space-y-6">
  <h2 class="text-2xl font-bold text-gray-900">Check Your Email</h2>
  <p class="text-sm text-gray-700 leading-relaxed">
    Please enter the verification code sent to your email address:
    <span class="font-medium text-gray-900"><%= session[:email] %></span>.
  </p>

  <div>
    <%= form_with(url: auth_verification_path, html: { class: "space-y-4" }) do |f| %>

      <%= f.hidden_field :email, value: @email %>
      <div>
        <%= f.label :verification_code, "Verification Code", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :verification_code, placeholder: "Enter your code", maxlength: 6, required: true, class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
      </div>

      <div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Verify</button>
      </div>
    <% end %>
  </div>
</div>
