<div class="max-w-3xl mx-auto p-6 space-y-6">
  <div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-2">Job Managment System</h1>
    <p class="text-gray-700">This is a test app</p>
  </div>
  
  <div class="bg-white shadow rounded-lg p-6 flex items-center justify-between">
    <% if logged_in? %>
      <p class="text-gray-700">Logged in as <span class="font-bold"><%= current_user.email %></span></p>
      <%= button_to "Sign Out", auth_path, method: :delete, 
          class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" %>
    <% else %>
      <%= link_to "Sign In", auth_path, 
          class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" %>
    <% end %>
  </div>
  
  <div class="text-center">
    <% if logged_in? %>
    <%= link_to "Go to Jobs Page", jobs_path, 
        class: "bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600" %>
        <% end %>
  </div>
</div>
